    function LineCanvas(cavID,data,options) {
        var ctx = document.getElementById(cavID).getContext("2d");
        new Chart(ctx).Line(data);
    }
    function BarCanvas(cavID, data, options) {
        var ctx = document.getElementById(cavID).getContext("2d");
